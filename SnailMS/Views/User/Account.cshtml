@using SnailMS.Service
@inject Service service
@model UserDto

@{
    ViewData["Title"] = "Личный кабинет";
}

@section Scripts{
    <script>
    // GetCalls
    function get() {
        var start = $('#startDate').val();
        var end = $('#endDate').val();
        $.ajax({
            type: "GET",
            url: "@Url.Action("GetCalls")",
            dataType: "html",
            data: {
                fromDate: start,
                toDate: end
            },
            success: function (result) {
                $("#result").html(result);
                alert(result);
            }
        });
    }
    </script>
}

<section style="background-color: #eee;">
    <div class="container py-5">

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        @{
                            var imgSrc = "/image/avatar.webp";
                            if (ViewBag.userId != null)
                            {
                                if (service.Users.GetUserAvatar(ViewBag.userId) != null)
                                {
                                    var base64 = Convert.ToBase64String(service.Users.GetUserAvatar(ViewBag.userId));
                                    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                }
                            }
                        }
                        <img src="@imgSrc" class="bd-placeholder-img" alt="avatar" style="width:350px; height:350px;  object-fit:cover;">
                        <h5 class="my-3">@Model.FirstName @Model.SecondName</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Полное имя</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.FirstName @Model.SecondName @Model.LastName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Телефон</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Number</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Дата регистрации</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.EntryDate</p>
                            </div>
                        </div>
                            <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Адрес</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Adress</p>
                            </div>
                        </div>
                            <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Статус аккаунта</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Status</p>
                            </div>
                        </div>
                            <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Баланс</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Balance</p>
                                <a asp-controller="User" asp-action="Balance">Пополнить баланс</a>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                        <div class="card mb-4 mb-md-0" style="width:contain;">
                            <div class="card-body">
                                <h5>Ваши уведомления</h5>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <td>Сообщение</td>
                                            <td>Дата</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                @{
                                    var notifications = service.Notifications.GetAllNotificationDto().ToList().Where(x=>x.UserId.Equals(ViewBag.userId));
                                    if (notifications.Count()!=0)
                                    {
                                        foreach (var notification in notifications)
                                        {
                                            if (notification != null)
                                            {
                                                    <tr>
                                                        <td>@notification.Message</td>
                                                        <td>@notification.Message</td>
                                                    </tr>
                                            }
                                        }
                                    }else{
                                            <tr>
                                                <td>Ящик уведомлений пуст</td>
                                                <td>☻</td>
                                            </tr>
                                    }
                                }
                                    </tbody>
                                </table>

                            </div>
                </br>
                        </div>

                        </br></br>

                        <!-- Calls -->
            <div class="card mb-4 mb-md-0" style="width:contain;">
                <div class="card-body">
                    <h5>История звонков</h5>
                    <hr />
                              <div class="inputs" style="display:inline-block;">
                              </br>
                              <input type="date" style="width:200px;" id="startDate" min="2015-01-01" max="2023-04-31" onchange="get()">
                              <input type="date" style="width:200px;" id="endDate" min="2015-01-01" max="2023-04-31" onchange="get()">
                          </br>
                      </div>
                  </br>
              </br 
                           </div>

                      </div>

                      <div id="result">
                          <h5 style="text-align:center;">Введите данные для поиска</h5>
                      </div>

        </div>
    </div>
</section>