@{
    ViewData["Title"] = "Отзывы";
}
@{
}

<div class="row d-flex justify-content-center" style="position:relative;">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-0 border" style="background-color: #f0f2f5;">
            <div class="card-body p-4">
                <form method="post">
                    <div class="form-outline mb-4">
                        <input type="text" id="addANote" class="form-control" placeholder="Напишите отзыв">
                        </br>
                        <button type="submit" class="btn btn-outline-secondary btn-lg px-4">Отправить</button>
                </form>
                </br>
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 80px;"></div><div class="form-notch-trailing"></div></div>
            </div>

            <div class="list-group w-auto">

                <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <img src="/image/avatar.webp" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                    <div class="d-flex gap-2 w-100 justify-content-between">
                        <div>
                            <h6 class="mb-0">Абонент1</h6>
                            <p class="mb-0 opacity-75">Все неплохо, но для регистрации требуется придти с паспортом в отдел, что очень неудобно.</p>
                        </div>
                        <small class="opacity-50 text-nowrap">28.11.2022</small>
                    </div>
                </div>

                <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <img src="/image/avatar.webp" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                    <div class="d-flex gap-2 w-100 justify-content-between">
                        <div>
                            <h6 class="mb-0">Абонент2</h6>
                            <p class="mb-0 opacity-75">НОЛЬ звезд!!! Зачем мне тащиться с паспортом в отдел???</p>
                        </div>
                        <small class="opacity-50 text-nowrap">28.11.2022</small>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>